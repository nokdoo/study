	<!-- 
		id : 메서드 이름 
		class : 주입할 실제 클래스 경로+이름 
		
			property : 의존관계 주입 속성
			name : 메서드 이름 
			ref : 주입될 빈의 이름 
	 -->
	 
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://192.168.35.155:3306/eng_db"/>
		<property name="username" value="eng"/>
		<property name="password" value="1234"/>
	</bean>
	
	<bean id="userDao" class="c1.datasource.UserDao">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	

</beans>