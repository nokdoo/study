	<!-- 
		id : 메서드 이름 
		class : 주입할 실제 클래스 경로+이름 
		
			property : 의존관계 주입 속성
			name : 메서드 이름 
			ref : 주입될 빈의 이름 
	 -->
	 
	<bean id="connectionMaker" class="c1.xml.DConnectionMaker"/>
	<bean id="userDao" class="c1.xml.UserDao">
		<!-- 주입받는 빈은 기본 생성자를 추가해주어야 하는데(추가하지 않으면 에러발생), 이것을 무시하는 태  -->
		 <constructor-arg ref="connectionMaker"/>
		<!-- <property name="connectionMaker" ref="connectionMaker"/> -->
	</bean>

</beans>